<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.lab07.pattasing.mylazyinstagram.MainActivity">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="83dp"
        android:layout_height="85dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@Patta"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post\n10"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textUser"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following\n1"
        app:layout_constraintLeft_toRightOf="@+id/textPost"
        android:layout_marginLeft="34dp"
        app:layout_constraintTop_toTopOf="@+id/textPost"
        android:layout_marginStart="34dp" />

    <TextView
        android:id="@+id/textFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follower\n1000000"
        app:layout_constraintLeft_toRightOf="@+id/textFollowing"
        android:layout_marginLeft="44dp"
        app:layout_constraintTop_toTopOf="@+id/textPost"
        android:layout_marginStart="44dp" />

    <TextView
        android:id="@+id/textBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The official Instagram for Android"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textPost"
        app:layout_constraintLeft_toRightOf="@+id/imageProfile"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/imageProfile"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spinner"
        android:entries="@array/ID"
        android:layout_width="39dp"
        android:layout_height="17dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textUser"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:id="@+id/imageList"
        android:layout_width="35dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imageGrid"
        android:layout_width="35dp"
        android:layout_height="37dp"
        app:srcCompat="@mipmap/ic_grid"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
